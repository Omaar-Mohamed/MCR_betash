    <form method="post" action="/CRUD">
        <section class="crud-system w-75 mx-auto my-3 p-4 shadow rounded">
            <div>
                <div class="form-group">
                    <label>Product Name</label> <span> * </span>
                    <input type="text" name="product_name" id="product-name" class="form-control" />
                    <div class="alert alert-danger d-none" id="PNameAlert">
                        Product Name must start with capital letter and contains minimum 3 letters, Can't contain special
                        characters
                    </div>
                </div>
    
 
    
                <div class="form-group">
                    <label>Product Price</label> <span> * </span>
                    <input type="number" name="product_price" id="product-price" class="form-control" />
                    <div class="alert alert-danger d-none" id="PPriceAlert">
                        Product Price must be in range 100 : 10,000 (Numbers Only)
                    </div>
                </div>

                <div class="form-group">
                    <label>Product image</label> <span> * </span>
                    <textarea class="form-control" name="product_image" id="product-name" rows="2"></textarea>
                    <div class="alert alert-danger d-none" id="PDescriptionAlert">
                        Product image must contain minimum 3 letters, Can't contain special characters
                    </div>
    
                </div>
    
                <div class="form-group">
                    <label>Product Description</label> <span> * </span>
                    <textarea class="form-control" name="product_description" id="product-description" rows="2"></textarea>
                    <div class="alert alert-danger d-none" id="PDescriptionAlert">
                        Product Description must contain minimum 3 letters, Can't contain special characters
                    </div>
    
                </div>
    
                <div id="btn-group" class="form-group text-center">
                    <p id="empty-input-alert"></p>
                    <a href="#display-table" class="text-decoration-none" id="display-table-href">
                        <button id="add-btn" class="btn my-btn mt-3">Add Product</button>
                    </a>
                </div>
            </div>
        </section>
    </form>

    <section class="crud-table w-75 mx-auto my-3 p-4 shadow rounded" id="display-table">

